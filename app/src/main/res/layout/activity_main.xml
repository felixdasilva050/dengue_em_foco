<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/apresentamos_o"
        android:textColor="@color/blue"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/subtitulo"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/titulo"
        android:layout_marginTop="8dp"
        android:textColor="@color/blue"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/dengue_em_foco"
        android:textSize="24sp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/descricao"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/subtitulo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:src="@drawable/logo"
        tools:ignore="ContentDescription" />

    <Button
        android:id="@+id/main_login_button"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/descricao"
        android:elevation="20dp"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/roundstyle"
        android:backgroundTint="@color/white"
        android:textColor="@color/blue"
        android:fontFamily="@font/poppins_semibold"
        android:text="HistÃ³rico salvo" />

    <Button
        android:id="@+id/main_register_button"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_login_button"
        android:layout_centerHorizontal="true"
        android:background="@drawable/roundstyle"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_semibold"
        android:backgroundTint="@color/blue"
        android:layout_marginTop="16dp"
        android:text="@string/cadastre_se" />

</RelativeLayout>
